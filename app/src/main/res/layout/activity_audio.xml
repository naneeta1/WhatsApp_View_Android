<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityAudio">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnPlayLocalAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onPlayLocalAudio"
            android:text="Play Local Audio" />

        <Button
            android:id="@+id/btnStreamAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onStreamAudio"
            android:text="Stream Remote Audio" />

        <Button
            android:id="@+id/btnRecordAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRecordAudio"
            android:text="Record Audio" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>